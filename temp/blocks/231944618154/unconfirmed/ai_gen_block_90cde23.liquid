{% doc %}
  @prompt
    collabsible contents
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collapsible-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
  }

  .ai-collapsible-item-{{ ai_gen_id }} {
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-collapsible-item-{{ ai_gen_id }}:first-child {
    border-top: 1px solid {{ block.settings.border_color }};
  }

  .ai-collapsible-header-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.padding }}px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    gap: 16px;
  }

  .ai-collapsible-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    flex-grow: 1;
  }

  .ai-collapsible-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: {{ block.settings.icon_color }};
  }

  .ai-collapsible-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-collapsible-item-{{ ai_gen_id }}.active .ai-collapsible-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-collapsible-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .ai-collapsible-content-inner-{{ ai_gen_id }} {
    padding: 0 0 {{ block.settings.padding }}px 0;
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_size }}px;
    line-height: 1.6;
  }

  .ai-collapsible-content-inner-{{ ai_gen_id }} p {
    margin: 0 0 12px 0;
  }

  .ai-collapsible-content-inner-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-collapsible-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }

    .ai-collapsible-content-inner-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.content_size }}px * 0.9);
    }
  }
{% endstyle %}

<collapsible-content-{{ ai_gen_id }}
  class="ai-collapsible-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% for i in (1..5) %}
    {% liquid
      assign title_key = 'item_' | append: i | append: '_title'
      assign content_key = 'item_' | append: i | append: '_content'
      assign open_key = 'item_' | append: i | append: '_open'

      assign item_title = block.settings[title_key]
      assign item_content = block.settings[content_key]
      assign item_open = block.settings[open_key]
    %}

    {% if item_title != blank %}
      <div
        class="ai-collapsible-item-{{ ai_gen_id }} {% if item_open %}active{% endif %}"
        data-collapsible-item
      >
        <button
          class="ai-collapsible-header-{{ ai_gen_id }}"
          aria-expanded="{% if item_open %}true{% else %}false{% endif %}"
          data-collapsible-trigger
        >
          <h3 class="ai-collapsible-title-{{ ai_gen_id }}">{{ item_title }}</h3>
          <span class="ai-collapsible-icon-{{ ai_gen_id }}">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </span>
        </button>
        <div
          class="ai-collapsible-content-{{ ai_gen_id }}"
          data-collapsible-content
          {% if item_open %}style="max-height: 1000px;"{% endif %}
        >
          <div class="ai-collapsible-content-inner-{{ ai_gen_id }}">
            {{ item_content }}
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</collapsible-content-{{ ai_gen_id }}>

<script>
  (function() {
    class CollapsibleContent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('[data-collapsible-item]');
        this.setupEventListeners();
        this.initializeOpenItems();
      }

      initializeOpenItems() {
        this.items.forEach((item) => {
          if (item.classList.contains('active')) {
            const content = item.querySelector('[data-collapsible-content]');
            const inner = content.querySelector('.ai-collapsible-content-inner-{{ ai_gen_id }}');
            content.style.maxHeight = inner.scrollHeight + 'px';
          }
        });
      }

      setupEventListeners() {
        this.items.forEach((item) => {
          const trigger = item.querySelector('[data-collapsible-trigger]');
          const content = item.querySelector('[data-collapsible-content]');
          const inner = content.querySelector('.ai-collapsible-content-inner-{{ ai_gen_id }}');

          trigger.addEventListener('click', () => {
            const isActive = item.classList.contains('active');

            if (isActive) {
              item.classList.remove('active');
              trigger.setAttribute('aria-expanded', 'false');
              content.style.maxHeight = '0';
            } else {
              item.classList.add('active');
              trigger.setAttribute('aria-expanded', 'true');
              content.style.maxHeight = inner.scrollHeight + 'px';
            }
          });
        });
      }
    }

    customElements.define('collapsible-content-{{ ai_gen_id }}', CollapsibleContent{{ ai_gen_id }});
  })();
</script>

