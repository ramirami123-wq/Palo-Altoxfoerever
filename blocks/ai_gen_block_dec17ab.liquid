{% doc %}
  @prompt
    recommended product
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-recommended-product-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-recommended-product__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-recommended-product__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 30px;
  }

  .ai-recommended-product__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
    font-weight: 700;
  }

  .ai-recommended-product__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-recommended-product__content-{{ ai_gen_id }} {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .ai-recommended-product__image-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    position: relative;
  }

  .ai-recommended-product__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    {% if block.settings.show_rounded_corners %}
      border-radius: 12px;
    {% endif %}
  }

  .ai-recommended-product__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    {% if block.settings.show_rounded_corners %}
      border-radius: 12px;
    {% endif %}
  }

  .ai-recommended-product__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-recommended-product__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 15px;
    left: 15px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 16px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    {% if block.settings.show_rounded_corners %}
      border-radius: 6px;
    {% endif %}
  }

  .ai-recommended-product__info-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .ai-recommended-product__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-recommended-product__title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-recommended-product__title-link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-recommended-product__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-recommended-product__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .ai-recommended-product__price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    font-weight: 400;
  }

  .ai-recommended-product__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    font-size: {{ block.settings.button_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.75px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
    {% if block.settings.show_rounded_corners %}
      border-radius: 8px;
    {% endif %}
  }

  .ai-recommended-product__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-recommended-product__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-recommended-product-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-recommended-product__content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 20px;
    }

    .ai-recommended-product__image-wrapper-{{ ai_gen_id }} {
      flex: 0 0 100%;
      width: 100%;
    }

    .ai-recommended-product__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-recommended-product__product-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.product_title_size }}px * 0.85);
    }

    .ai-recommended-product__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-recommended-product__content-{{ ai_gen_id }} {
      {% if block.settings.layout == 'image_right' %}
        flex-direction: row-reverse;
      {% endif %}
    }
  }
{% endstyle %}

<recommended-product-{{ ai_gen_id }} class="ai-recommended-product-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-recommended-product__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-recommended-product__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-recommended-product__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-recommended-product__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.product != blank %}
      {% assign product = block.settings.product %}
      <div class="ai-recommended-product__content-{{ ai_gen_id }}">
        <div class="ai-recommended-product__image-wrapper-{{ ai_gen_id }}">
          {% if product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 800 }}"
              alt="{{ product.featured_image.alt | escape }}"
              class="ai-recommended-product__image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ product.featured_image.width }}"
              height="{{ product.featured_image.height }}"
            >
          {% else %}
            <div class="ai-recommended-product__image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if block.settings.show_badge and block.settings.badge_text != blank %}
            <div class="ai-recommended-product__badge-{{ ai_gen_id }}">
              {{ block.settings.badge_text }}
            </div>
          {% endif %}
        </div>

        <div class="ai-recommended-product__info-{{ ai_gen_id }}">
          <h3 class="ai-recommended-product__title-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-recommended-product__title-link-{{ ai_gen_id }}">
              {{ product.title }}
            </a>
          </h3>

          {% if block.settings.show_description and product.description != blank %}
            <div class="ai-recommended-product__description-{{ ai_gen_id }}">
              {{ product.description | strip_html | truncatewords: block.settings.description_length }}
            </div>
          {% endif %}

          {% if block.settings.show_price %}
            <div class="ai-recommended-product__price-{{ ai_gen_id }}">
              <span class="ai-recommended-product__price-current-{{ ai_gen_id }}">
                {{ product.price | money }}
              </span>
              {% if product.compare_at_price > product.price %}
                <span class="ai-recommended-product__price-compare-{{ ai_gen_id }}">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
          {% endif %}

          <div>
            <a href="{{ product.url }}" class="ai-recommended-product__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        </div>
      </div>
    {% else %}
      <div class="ai-recommended-product__empty-state-{{ ai_gen_id }}">
        Next, select a product to recommend
      </div>
    {% endif %}
  </div>
</recommended-product-{{ ai_gen_id }}>

<script>
  (function() {
    class RecommendedProduct{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.init();
      }

      init() {
        const button = this.querySelector('.ai-recommended-product__button-{{ ai_gen_id }}');
        if (button) {
          button.addEventListener('click', function(e) {
            const productUrl = this.getAttribute('href');
            if (productUrl) {
              window.location.href = productUrl;
            }
          });
        }
      }
    }

    customElements.define('recommended-product-{{ ai_gen_id }}', RecommendedProduct{{ ai_gen_id }});
  })();
</script>

